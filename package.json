{
  "name": "vietqr-pro-studio",
  "version": "1.0.0",
  "description": "Phần mềm tạo mã QR chuyên nghiệp tích hợp AI",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "start": "electron ."
  },
  "keywords": [
    "QR",
    "VietQR",
    "Generator",
    "Electron",
    "AI"
  ],
  "author": "VIETCO",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "lucide-react": "^0.378.0",
    "qrcode.react": "^3.1.0",
    "@google/genai": "^1.2.0"
  },
  "build": {
    "appId": "com.vietqr.pro.studio",
    "productName": "VIETQR Pro Studio",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "icon.ico"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "VIETQR Pro Studio"
    }
  }
}